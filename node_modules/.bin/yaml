#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/s/projets/projets-formation/nextjs-project/node_modules/yaml/node_modules:/mnt/s/projets/projets-formation/nextjs-project/node_modules:/mnt/s/projets/projets-formation/node_modules:/mnt/s/projets/node_modules:/mnt/s/node_modules:/mnt/s/projets/projets-formation/nextjs-project/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/s/projets/projets-formation/nextjs-project/node_modules/yaml/node_modules:/mnt/s/projets/projets-formation/nextjs-project/node_modules:/mnt/s/projets/projets-formation/node_modules:/mnt/s/projets/node_modules:/mnt/s/node_modules:/mnt/s/projets/projets-formation/nextjs-project/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../yaml/bin.mjs" "$@"
else
  exec node  "$basedir/../yaml/bin.mjs" "$@"
fi
